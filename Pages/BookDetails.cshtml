@page
@model BestShop.Pages.BookDetailsModel
@{
}

<h2 class="rounded text-center text-white p-2" style="background-color: #08618d;">Szczegóły produktu</h2>

<div class="row">
    <div class="col-md-3">
        <div class="my-2 text-center sticky-top" style="top:10px;">
            <img src="/images/books/@Model.productInfo.ImageFileName" class="img-fluid rounded" alt="...">
            <button type="button" class="btn btn-warning btn-sm my-2" onclick="addToCart(this, @Model.productInfo.Id)">
                Dodaj do koszyka <i class="bi bi-cart4"></i>
            </button>
        </div>
    </div>
    <div class="col-md-9">
        <div class="row mb-3">
            <div class="col-md-4">
                <h4>Tytuł</h4>
            </div>
            <div class="col-md-8">
                <h4>@Model.productInfo.Title</h4>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <strong>Cena</strong>
            </div>
            <div class="col-md-8">
                @Model.productInfo.Price zł
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <strong>Kategoria</strong>
            </div>
            <div class="col-md-8">
                @Model.productInfo.Category
            </div>
        </div>

        <p>
            <strong>Opis:</strong>
            <br />
            @Model.productInfo.Description
        </p>
    </div>
</div>
