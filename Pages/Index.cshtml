@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    ViewData["NoContainer"] = true;
}

<style>
    .book-item img {
        width: 100%;
        height: 260px;
        object-fit: contain;
        background: radial-gradient(white 50%, lightblue 100%)
    }

    .book-item {
        transition: all 0.3s ease;
    }

        .book-item:hover {
            transform: scale(1.05);
        }
</style>

<!-- Hero section -->
<div class="py-5" style="background-color: #08618d;">
    <div class="container text-white">
        <div class="row">
            <div class="col-md-6 pb-3">
                <h1 class="display-2"><strong>OleStore</strong></h1>
                <br />
                <p>
                    Mamy najlepsze produkty techniczne na rynku. Zakochasz się w naszej ofercie.
                    Oferujemy szeroki wybór urządzeń z różnych kategorii.
                    Na pewno znajdziesz coś, co spełni Twoje oczekiwania.
                </p>
                <br />
                <form class="d-flex" action="/Products">
                    <input class="form-control me-2" name="search" placeholder="Szukaj według tytułu">
                    <button class="btn btn-outline-light" type="submit">Szukaj</button>
                </form>

            </div>
            <div class="col-md-6">
                <img src="/images/products.jpg" class="img-fluid rounded" alt="">
            </div>
        </div>
    </div>
</div>


<!-- Newest Products Section -->
<div class="py-5">
    <div class="container">
        <h1 class="pb-5 text-center display-5"><strong>Najnowsze Produkty</strong></h1>
        <div class="row">
            @foreach (var item in Model.listNewestProducts)
            {
                <div class="col-lg-3 col-sm-6 my-2">
                    <div class="card shadow text-center h-100 book-item">
                        <img src="/images/books/@item.ImageFileName" class="card-img-top p-3" alt="..." />
                        <div class="card-body">
                            <h4>@item.Title</h4>
                            <p>Kategoria: @item.Category</p>
                            <h4>@(item.Price) zł</h4>
                            <a class="btn btn-primary btn-sm my-2" href="/BookDetails?id=@(item.Id)" role="button">Szczegóły</a>
                            <button type="button" class="btn btn-warning btn-sm my-2" onclick="addToCart(this, @item.Id)">
                                Dodaj do koszyka <i class="bi bi-cart4"></i>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Top Sales Section -->
<div class="py-5" style="background-color: #e9ecf0;">
    <div class="container">
        <h1 class="pb-5 text-center display-5"><strong>Najlepsze Sprzedaże</strong></h1>
        <div class="row">
            @foreach (var item in Model.listTopSales)
            {
                <div class="col-lg-3 col-sm-6 my-2">
                    <div class="card shadow text-center h-100 book-item">
                        <img src="/images/books/@item.ImageFileName" class="card-img-top p-3" alt="..." />
                        <div class="card-body">
                            <h4>@item.Title</h4>
                            <p>Kategoria: @item.Category </p>
                            <h4>@(item.Price) zł</h4>
                            <a class="btn btn-primary btn-sm my-2" href="/BookDetails?id=@(item.Id)" role="button">Szczegóły</a>
                            <button type="button" class="btn btn-warning btn-sm my-2" onclick="addToCart(this, @item.Id)">
                                Dodaj do koszyka <i class="bi bi-cart4"></i>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>