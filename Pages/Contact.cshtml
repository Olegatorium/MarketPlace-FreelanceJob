@page
@model BestShop.Pages.ContactModel
@{
}

<div class="row">
    <div class="col-lg-9 mx-auto p-3">
        <h3 class="mb-3 font-weight-normal text-center pb-4">Formularz kontaktowy</h3>

        @if (Model.ErrorMessage.Length > 0)
        {
            <div class='alert alert-warning alert-dismissible fade show' role='alert'>
                <strong>@Model.ErrorMessage</strong>
                <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Zamknij'></button>
            </div>
        }
        else if (Model.SuccessMessage.Length > 0)
        {
            <div class='alert alert-success alert-dismissible fade show' role='alert'>
                <strong>@Model.SuccessMessage</strong>
                <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Zamknij'></button>
            </div>
        }

        <form method="post">
            <div class="row mb-3">
                <label for="firstname" class="col-sm-4 col-form-label" asp-for="FirstName">Imię</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="FirstName" placeholder="Wpisz swoje imię">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label for="lastname" class="col-sm-4 col-form-label" asp-for="LastName">Nazwisko</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="LastName" placeholder="Wpisz swoje nazwisko">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label for="email" class="col-sm-4 col-form-label" asp-for="Email">E-mail</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Email" placeholder="Wpisz swój adres e-mail">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label for="phone" class="col-sm-4 col-form-label" asp-for="Phone">Telefon</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Phone" placeholder="Wpisz swój numer telefonu">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label for="subject" class="col-sm-4 col-form-label" asp-for="Subject">Temat</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="Subject" asp-items="Model.SubjectList">
                        <option value="">Wybierz temat</option>
                    </select>
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label for="message" class="col-sm-4 col-form-label" asp-for="Message">Wiadomość</label>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="Message" placeholder="Wpisz swoją wiadomość"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-4 col-form-label"></div>
                <div class="col-sm-8">
                    <button type="submit" class="btn-primary">Wyślij</button>
                </div>
            </div>
        </form>
    </div>
</div>
